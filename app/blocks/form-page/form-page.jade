mixin form-title(title, text)
	h3.form-page__title= title
	p.form-page__text= text

form(action="", method="post").form-page
	fieldset.form-page__fieldset
		include ../form-text/form-text

	fieldset.form-page__fieldset
		+form-title("Расскажите о себе чекбоксами", "Отметьте чекбоксами пункты, которые соответствуют вашим скиллам. Кстати, отсутствие опыта не означает, что у вас меньше шансов стать одним из наших товарищей. Это означает, что вы будете получать те задачи, с которыми гарантировано будете справляться.")

		include ../form-checkbox/form-checkbox

	fieldset.form-page__fieldset
		+form-title("Уровень владения JavaScript")

		include ../slider-block/slider-block

	fieldset.form-page__fieldset
		+form-title("Расскажите о себе словами", "Напишите пару предложений, чем вас привлекла наша вакансия и чего вы ожидаете от работы в CSSSR. Кстати, будет здорово, если при нехватке места для текста строки будут добавляться автоматически.")

		include ../textarea-block/textarea-block

	fieldset.form-page__fieldset
		+form-title("Какие у вас планы на будущее?", "Этот ответ ни на что не повлияет. Не беда, если в будущем ваши планы поменяются.")

		include ../form-radio/form-radio

	fieldset.form-page__fieldset
		include ../input-date/input-date


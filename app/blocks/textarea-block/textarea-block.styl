.textarea-block
	font-input()
	padding-x(4px)

	width 100%

	line-height 60px
	white-space pre-wrap
	word-wrap break-word

	background-color transparent
	background-image url('../images/line.png')
	background-position right 19px
	border none

	overflow hidden

	&::placeholder
		font-input()
		line-height 60px
		opacity 1

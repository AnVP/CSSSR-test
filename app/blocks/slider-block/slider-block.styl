.slider-block__range
	position relative

	width 100%
	height 8px

	background-image url('../images/line.png')
	background-repeat no-repeat
	background-position center

.slider-block__button
	position absolute

	top -18px

	width 17px
	height 15px

	background-color transparent
	background-image url('../images/pin.png')
	background-repeat no-repeat
	background-position center

	border none

.slider-block__list
	display flex
	// justify-content space-between

	margin-top 22px

.slider-block__item
	font-slider()

	position relative

	max-width 170px

	&::before
		content ''
		position absolute
		top -28px
		left -2px

		width 10px
		height 25px

		background-image url('../images/line-vertical.png')
		background-repeat no-repeat
		background-position center

	&:nth-child(2)
		margin-left 82px

		&::before
			height 12px

	&:nth-child(3)
		margin-left 62px

		&::before
			height 12px

	&:last-child
		margin-left 88px
		margin-top 6px

		&::before
			top -32px
			left 134px
